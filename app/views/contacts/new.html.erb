<main id="contact">
    <div class="container">
        <div class="row">
            <div class="col">
                <%= form_for @contact do |f| %>
                
                <%= f.label :name %>
                <%= f.text_field :name, class: "form-control", required: true %>

                <br>
                <%= f.label :email %>
                <%= f.text_field :email, class: "form-control", required: true %>

                <br>

                
                <%= f.label :message %>
                <%= f.text_area :message, as: :text, class: "form-control" %>

                <br>

                <div hidden>
                
                <%= f.label :nickname %>
                <%= f.text_field :nickname, hint: 'Leave this field blank' %>
                </div>

                <%= f.submit 'Send Message', class: "form-control btn btn-green" %>
                <% end %>
            </div>
            <div class="col">

            </div>
        </div>
    </div>
</main>

